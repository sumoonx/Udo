<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seu.udo">

    <application
        android:name=".presentation.UdoApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".presentation.ui.activity.WelcomeActivity"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".presentation.ui.activity.MainActivity"/>
        <activity android:name=".presentation.ui.activity.LoginActivity"/>
        <activity android:name=".presentation.ui.activity.TestActivity"/>
    </application>

</manifest>
